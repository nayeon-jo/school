<Page x:Class="WpfApp2.Calendar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2" xmlns:my="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Calendar">

    <StackPanel>
        <Calendar x:Name="calendar" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     SelectedDatesChanged="calendar_SelectedDatesChanged" Height="166" Margin="10,0" Width="780"/>
        <Grid>
            <TextBox  x:Name="content"  FontSize="15" Margin="20,10,20,-237" />
            <Button x:Name="Enter"   Click="Enter_Click" Margin="289,369,299,-276" Content="저장" RenderTransformOrigin="0.507,0.2"/>
            <Button x:Name="Delete"  Click="Delete_Click" Margin="289,396,299,-303" RenderTransformOrigin="0.502,0.884" Content="삭제"/>
        </Grid>
    </StackPanel>
</Page>
